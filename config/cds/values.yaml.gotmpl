# -*- mode: yaml -*-

replicaCount: 1

appConfig: |
  {{- readFile "sys.config" | nindent 2 }}
caCrt: |
  {{- readFile "ca.crt" | nindent 2 }}
clientCrt: |
  {{- readFile "client.pem" | nindent 2 }}
erlInetrc: |
  {{- readFile "../vm/erl_inetrc" | nindent 2 }}

metrics:
  serviceMonitor:
    enabled: true
    namespace: monitoring
    additionalLabels:
      release: prometheus
